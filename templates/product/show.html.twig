{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="login-card">
    <h2 class="mb-4 text-center">Products</h2>
        <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="Photo de profil" style="max-width:180px; border-radius:50%;">


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>image</th>
                <td>{{ product.image }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
</div>

{% endblock %}
