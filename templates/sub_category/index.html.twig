{% extends 'base.html.twig' %}

{% block title %}SubCategory index{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1 class="text-center " style="margin-top:3em;">SubCategory index</h1>
    <div class="categoryCard">

        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Catégorie</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for sub_category in sub_categories %}
                <tr>
                    <td>{{ sub_category.name }}</td>
                    <td>{{ sub_category.category }}</td>
                    <td>
                        <a href="{{ path('app_sub_category_edit', {'id': sub_category.id}) }}" class= 'btn btn-sm '>✏️</a>
                        <a href="{{ path('app_sub_category_delete', {'id': sub_category.id}) }}" class= 'btn btn-sm ' onclick="return confirm('Es-tu sûr de vouloir supprimer cet élément ?');">❌</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    <a href="{{ path('app_sub_category_new') }}" class="btn btn-primary" >Create new</a>
    </div>
</div>
{% endblock %}
