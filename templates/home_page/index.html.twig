{% extends 'base.html.twig' %}

{% block title %}Hello HomePageController!{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg  bg-primary bg-opacity-50 border-bottom shadow-sm fixed-top">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home_page') }}">
            <img src="/img/logoV2.png" alt="logo" width="120" height="50">
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <div class="mx-auto text-center">Vous êtes connecté en tant que {{ app.user.FirstName }}</div>
            <ul class="navbar-nav">
              {% if app.user %}

                <li class="nav-item">
                    <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-primary">  Déconnexion</a>
                </li>
                {% else %}
                <li class="nav-item">
                    <a class="btn btn-sm btn-outline-primary" href="{{ path('app_register') }}">Inscription</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-sm btn-primary" href="{{ path('app_login') }}">Connexion</a>
                </li>
              {% endif %}
            </ul>
        </div>

    </div>
</nav>
<div class="text-center " >
    <h1 class="text-center " style="margin-top:3em;">Bienvenue sur la page d'accueil</h1>
    <a class="btn btn-primary" href="{{ path('app_category') }}">les categories</a>
</div>


{% endblock %}
