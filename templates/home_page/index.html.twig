{% extends 'base.html.twig' %}

{% block title %}Boutique en ligne || Acceuil{% endblock %}

{% block body %}
<div class="container-fluid m-2">
    <h1 class="text-center" style="margin-top:3em;letter-spacing:2px;margin-bottom:2em;">Bienvenue sur la page d'accueil</h1>
    {% include 'layouts/_flash_message.html.twig' %} 
    <div class="row">
        {% for product in products %}
            <div class="col-md-4 col-lg-3 mb-4 d-flex align-items-stretch">
                <div class="card h-100" style="cursor:pointer;">
                    <img src="{{ asset('uploads/images/' ~ product.image) }}" class="card-img-top" alt="image">
                    <div class="card-body">
                        <h5 class="card-title" style="font-weight:600;letter-spacing:1px;">{{ product.name }}</h5>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="price-tag">{{ product.prix }}&nbsp;€</span>
                        </div>
                        <p class="card-text">{{ product.description|slice(0, 100) }}{% if product.description|length > 100 %}...{% endif %}</p>
                        <div class="mt-3 text-end">
                            <a href="#" class="btn btn-sm btn-outline-green"  data-bs-toggle="modal" data-bs-target="#productModal{{ product.id }}">Voir modal</a>
                            <a href="{{ path('app_home_product_show', {'id': product.id})}}" class="btn btn-sm btn-green">Voir</a> 
                        </div>
                    </div>
                </div>
            </div>



<!-- Modal -->
            <div class="modal fade" id="productModal{{ product.id }}" >
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">{{ product.name }}</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body d-flex flex-column flex-md-row">
                            <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="image" class="img-fluid rounded me-md-4 mb-3 mb-md-0" style="max-width: 300px;">
                            <div>
                                <h4 class="price-tag">{{ product.prix }} €</h4>
                                <p>{{ product.description }}</p>
                                <a href="{{path('app_cart_add',{'id':product.id})}}" class="btn btn-sm btn-green">ajouter au panier</a> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>
</div>
<div class=" mx-5 justify-content-center">
        {{ knp_pagination_render(products, 'layouts/paginator.html.twig') }}
</div>
{% endblock %}
