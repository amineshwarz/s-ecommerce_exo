{% extends 'base.html.twig' %}

{% block title %}Show Product{% endblock %}

{% block body %}
<h1 class="text-center " style="margin-top:3em;">Tout les produits</h1>

<div class="container-fluid px-5 py-5">
    <div class="card shadow-sm position-relative" >
        <div class="position-absolute top-0 end-0 m-2">
            <h3 class="text-primary my-4 mx-4">{{ product.prix }} €</h3>
        </div>

        <div class="row g-0 ">
            <div class="col-auto p-3">
                <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="Image de Produit" class="img-fluid rounded" style="max-width: 400px; max-height: auto; object-fit: cover;">
            </div>
        
            <div class="col p-3">
                <h3 class="mb-2">{{ product.name }}</h3>
                <h5 class="text-primary mb-3">{{ product.prix }} €</h5>
                <p class="text-muted">{{ product.description }}</p>
            </div>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end my-3 mx-3">
            <a href="{{ path('app_home_page') }}" class="btn btn-sm btn-primary">retour</a>
            <a href="#" class="btn btn-sm btn-primary">ajouter au panier</a> 
        </div>
    
    </div>
</div>


<h2 class="text-center mt-5">Dernier produits ajoutés</h2>
    <div class="row">
        {% for product in products %}
            <div class="col-md-4 col-lg-3 mb-4 d-flex align-items-stretch">
                <div class="card h-100" style="cursor:pointer;">
                    <img src="{{ asset('uploads/images/' ~ product.image) }}" class="card-img-top" alt="image">
                    <div class="card-body">
                        <h5 class="card-title" style="font-weight:600;letter-spacing:1px;">{{ product.name }}</h5>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="price-tag">{{ product.prix }}&nbsp;€</span>
                        </div>
                        <p class="card-text">{{ product.description|slice(0, 100) }}{% if product.description|length > 100 %}...{% endif %}</p>
                        <div class="mt-3 text-end">
                            <a href="#" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#productModal{{ product.id }}">Voir modal</a>
                            <a href="{{ path('app_home_product_show', {'id': product.id})}}" class="btn btn-sm btn-primary" >Voir</a> 
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}