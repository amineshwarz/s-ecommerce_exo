{% extends 'base.html.twig' %}

{% block title %}Hello BillController!{% endblock %}

{% block body %}

<h1 class="text-center mb-5" style="margin-top:3em;">Facture de commande n° {{order.id}}</h1>


<div class='order-card text-center'>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Adresse</th>
                <th scope="col">Ville</th>
            </tr>
        </thead>
        <tbody>
           
                <tr>
                    <td>{{ order.firstName }}</td>
                    <td>{{ order.lastName }}</td>
                    <td>{{ order.phone}} </td>
                    <td>{{ order.adresse }}</td>
                    <td>{{ order.city.name }}</td>
                </tr>
                 {% for product in order.orderproducts %}
                <tr>
                    <td>{{ product.product.name }}</td>
                    <td>{{ product.qte }}</td>
                    <td>{{ product.product.prix }} €</td>
                    <td>{{ product.product.prix*product.qte}} €</td>     
                    <td>
                        
                    </td>
                    <td>
                        <span class='text-primary'> Informations du client :</span>
                        <h4> commande n°{{ order.id }}</h2>
                        <span> Date de la commande : {{ order.createdAt|date }}</span>
                        <br>
                        <span> Frais de livraison : {{ order.city.shippingCost }} €</span>
                        <h5 class='mb-5'> Total de la commande : {{ order.totalPrice }} €</h5> 
                        {% if order.isCompleted != true %}
                            <a href="{{ path('app_order_is-completed-update',{'id':order.id}) }}" class="btn btn-sm btn-green">Marquer comme livrée</a> 
                        {% endif %}
                        <a href="" class="btn btn-sm btn-green" >Imprimer</a>
                    </td>
                </tr>
                {% endfor %} 
           
        </tbody>
    </table>

</div>
 <style>
    table{
        width: 100%;
        border-collapse: collapse;
    }
    th, td {
        padding: 8px 12px;
        border: 1px solid #ddd;
        text-align: left;
    }
    thead {
        background-color: #f2f2f2;
    }
    tbody tr:nthchild(odd) {
        background-color: #f9f9f9;
    }
</style>
{% endblock %}
