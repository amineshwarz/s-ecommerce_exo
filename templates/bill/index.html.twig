

{% block body %}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Facture de commande n° {{ order.id }}</h2>
                    
                    <!-- Infos Client -->
                    <div class="mb-4">
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <strong>Nom :</strong> {{ order.lastName }}
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Prénom :</strong> {{ order.firstName }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <strong>Téléphone :</strong> {{ order.phone }}
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Adresse :</strong> {{ order.adresse }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <strong>Ville :</strong> {{ order.city.name }}
                            </div>
                            <div class="col-md-6 mb-2">
                                <strong>Date de la commande :</strong> {{ order.createdAt|date('d/m/Y') }}
                            </div>
                        </div>
                        <div>
                            {% if order.isCompleted %}
                                <span class="badge bg-success">Commande livrée</span>
                            {% else %}
                                <span class="badge bg-danger">Commande non livrée</span>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Produits -->
                    <h5 class="mb-3 text-secondary">Produits de la commande</h5>
                    <table class="table table-bordered align-middle table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Produit</th>
                                <th>Qté</th>
                                <th>Prix unité</th>
                                <th>Sous-total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product in order.orderproducts %}
                            <tr>
                                <td>{{ product.product.name }}</td>
                                <td>{{ product.qte }}</td>
                                <td>{{ product.product.prix }} €</td>
                                <td>{{ product.product.prix * product.qte }} €</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3" class="text-end">Frais de livraison :</td>
                                <td>{{ order.city.shippingCost }} €</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end fw-bold">Total commande :</td>
                                <td class="fw-bold text-primary">{{ order.totalPrice }} €</td>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="text-end mt-4">
                        {% if not order.isCompleted %}
                            <a href="{{ path('app_order_is-completed-update',{'id':order.id}) }}" class="btn btn-sm btn-success ms-2">
                                Marquer comme livrée
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
/* Conteneur */
.container {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    color: #333;
    max-width: 900px;
    margin: 2em auto;
    padding: 1em;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgb(0 0 0 / 0.1);
}

/* Titre */
h2.text-center {
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 1rem;
}

/* Sections infos */
strong {
    color: #34495e;
}

.row > div {
    padding: 0.25em 0;
}

/* Badge statut */
.badge {
    font-size: 0.9rem;
    padding: 0.4em 0.8em;
    border-radius: 10px;
}

.badge.bg-success {
    background-color: #28a745 !important;
}

.badge.bg-danger {
    background-color: #dc3545 !important;
}

/* Tableau */
.table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
}

.table-bordered {
    border: 1px solid #ddd;
}

.table thead.table-dark th {
    background-color: #34495e;
    color: #ffffff;
    border-color: #2c3e50;
    font-weight: 600;
    text-align: center;
}

.table tbody td, 
.table tfoot td {
    padding: 0.75em;
    vertical-align: middle;
}

.table-striped tbody tr:nth-of-type(odd) {
    background-color: #f9f9f9;
}

.table tfoot td {
    font-weight: 600;
    text-align: right;
    border-top: 2px solid #ccc;
}

.table tfoot tr:last-child td {
    font-size: 1.2rem;
    color: #2980b9;
}

/* Boutons */
.btn {
    padding: 0.4em 0.8em;
    font-size: 0.9rem;
    border-radius: 5px;
    transition: background-color 0.2s ease;
    cursor: pointer;
}

.btn-sm {
    font-size: 0.85rem;
}

.btn-secondary {
    background-color: #7f8c8d;
    color: #fff;
    border: none;
}

.btn-secondary:hover {
    background-color: #6c757d;
}

.btn-success {
    background-color: #28a745;
    color: #fff;
    border: none;
}

.btn-success:hover {
    background-color: #218838;
}

/* Alignement texte dans tableau */
.table td, .table th {
    text-align: center;
}

</style>
{% endblock %}
